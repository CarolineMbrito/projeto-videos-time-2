        <div class="row mt flexS flexEnd">
          <% filmes.forEach((item)=> { %>
            <div class="col-md-4">
              <div class="row">
                <h4 class="col-sm-12 mt-5 mb-2 body "><%=item.titulo%></h4>
              </div>
              <div class="row">
                <img class="col-sm-12 img imgFilme" data-generoModal="<%=item.genero%>" data-anoModal="<%=item.ano%>" data-classificacaoModal="<%=item.classificacao%>" data-tituloModal="<%=item.titulo%>" data-diretorModal="<%=item.diretor%>" data-valorModal="<%=item.valor%>" data-imgModal="../imagens/<%=item.imagens%>" data-video="<%=item.trailer%>" src="../imagens/<%=item.imagens%>">
              </div>
            </div>
            <% }) %>


              <!-- Modal -->
