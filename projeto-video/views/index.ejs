</body>
<script>
$().ready(function(){
  console.log("jquery funfando...")

  $('.imgFilme').click(function(){
    $('#modalFilme iframe').attr('src',$(this).attr('data-video'))
    $('#modalFilme img').attr('src',$(this).attr('data-imgModal'))
    $('#modalFilme h5').html($(this).attr('data-tituloModal'))
    $('#p1').html(`Gênero: ${$(this).attr('data-generoModal')}`)
    $('#p2').html(`Ano: ${$(this).attr('data-anoModal')}`)
    $('#p3').html(`Direção: ${$(this).attr('data-diretorModal')}`)
    $('#p4').html(`Classificação: ${$(this).attr('data-classificacaoModal')}`)
    $('#modalFilme h1').html(`R$ ${$(this).attr('data-valorModal')}`)


    $(this).attr('data-video')
  $("#modalFilme").modal('show');

  })

  $('.bt-produto').click(function(){
      let dataid = $(this).attr("data-id")
      let dataTitulo = $(this).attr("data-titulo")
      let dataQtd = $(this).attr("input")
      let dataAno = $(this).attr("data-ano")
      let dataValor = $(this).attr ("data-valor")
      $.post ("/carrinho",
      {
        filmes_id:dataid,
        titulo: dataTitulo,
        qtd: dataQtd,
        ano: dataAno,
        valor: dataValor
      },
      function (data,status)
      {
        location.href = "/carrinho"
      },"json")
  })
 
})

</script>
<script src="../js/index.js"></script>


