          }
          .flexEnd{
            align-items: flex-end;
          }
          
          .imgMenor {
            
            border-radius: 4px;
            padding: 5px;
            width: 300px;
            height: 400px;
           
          } 
          .body {
            font-weight: bold;
          }
          .p {
            font-size: 50px;
          }
          .pModal {
            font-size: 20px;
          }
