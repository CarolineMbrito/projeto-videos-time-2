<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

  <title>Produto Single</title>
</head>

<body style="background-image: linear-gradient(to bottom right, rgb(0, 0, 0), rgba(19, 43, 225, 0.903))" class="text-primary">

  <!-- Setor cabeçalho -->
  <header class="text-center">
    <div class=row>
      <div class="col-sm-4 text-left">
        <a target="" href="index">
          <img src="../imagens/primeirasessão.png" width="250"></a>
      </div>
      <div class="col-sm-5">
        <h2 style="font: size 100%;">Onde você acessa antes de Todos!</h2>
      </div>
      <div class="col-sm-3">
        <span id="bemVindo"></span>
        <a id="entrar" href="login">Entrar</a>
        <a class="ml-5" style="cursor:pointer;text-decoration:underline" id="sair">Sair</a>
      </div>
    </div>
    <div class="row">
      <div class="container text-right mr-2">
        <a id="cadastro" href="cadastro">Cadastre-se</a>
      </div>
    </div>
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
      <a class="navbar-brand" href="#">Acesse</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href='carrinho'>Carrinho</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href='promocao'>Promoções</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href='produto'>Produtos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href='contato'>Contato</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="row">
      <hr />
    </div>
    <div class="container" class="col-sm-8">
     
      <h2 class="p mr-5"><%=galeria[0].titulo%></h2>
      
    </div>
  </header>

  <style>
    .img {
      
      border-radius: 4px;
      padding: 5px;
      width: 350px;
      height: 495px;
     
    } 
    .body {
      font-weight: bold;
    }
    .p {
      font-size: 50px;
    }
    .pMenor {
      font-size: 25px;
    }
    .alignR{
      text-align: right;
      cursor:pointer;text-decoration:underline
    }
    .iframeCenter{
      align-content: center;
    }
    
  </style>

  <section class="container">
    <hr>


    <div id="singleProduto" class="mt-5 mb-5">
      <div class="row">
      <div class="col-sm-12">
        <h2 class="pMenor body">Trailer:</h2>
        <iframe width="1000" height="550" src="<%=galeria[0].trailer%>"
          title="YouTube video player" frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>

      </div>
    </div>
      <div class="row">
        <div class="col-sm-7 mt-5">

          <p class="col-sm-10 "><p class="pMenor body"><%=galeria[0].titulo%></p> <p class="text-white"><%=galeria[0].sinopse%></p> (<%=galeria[0].ano%>)</p>

        </div>

        <div class="row">


          <div class="col-sm-6">
            <img class="img" src="../imagens/<%=galeria[0].imagens%>" />
          </div>

          
        </div>



      </div>

    </div>
    </div>


    <article>
      <div class="row mt-5 mb-5">
        <div class="col-sm-4 text-center">
          <img src="../imagens/estranho.jpg" width="200">
        </div>
        <div class="col-sm-4 text-center">
          <img src="../imagens/capitao.jpeg" width="200">
        </div>
        <div class="col-sm-4 text-center">
          <img src="../imagens/logan.jpg" width="200">
        </div>
      </div>
    </article>

  </section>
  <footer class="bg-primary text-white mt-4 p-4 text-center">
    <p>&copy;2022 - Todos os direitos reservados.</p>
  </footer>

  <script>

//IDENTIFICAÇÃO DO USUÁRIO 
let user = localStorage.emailUser
let bemVindo = document.querySelector("#bemVindo")
let entrar = document.querySelector("#entrar")
let sair = document.querySelector("#sair")
let cadastro = document.querySelector("#cadastro")

//SAUDAÇÃO
function msgUser() {
    let nomeUser = user.substring(0, user.indexOf('@'))
    bemVindo.innerHTML = 'Olá <b>' + nomeUser + '<b/>'
    entrar.style.display = "none"
    cadastro.style.display = "none"
}

//ESCONDE O BOTÃO ENTRAR
function resetUser() {
    sair.style.display = "none"
}
sair.onclick = function () {
    localStorage.removeItem("emailUser")
    location.href = 'index'
}
localStorage.emailUser ? msgUser() : resetUser()

  </script>
</body>


</html>